extends ../../layouts/default.pug

block main
  .container.mt-5
    .row.justify-content-center
      .col-md-6
        .card.shadow-lg.rounded-4.border-0
          .card-body.p-4
            h2.text-center.mb-4.text-primary Đăng ký tài khoản 

            form(action="/users/register" method="POST")
              .mb-3
                label.form-label(for="fullname") Họ và tên
                input.form-control.rounded-pill(type="text", name="fullname", id="fullname", placeholder="Nhập họ tên")

              .mb-3
                label.form-label(for="email") Email
                input.form-control.rounded-pill(type="email", name="email", id="email", placeholder="Nhập email", required)

              .mb-3
                label.form-label(for="phone") Số điện thoại
                input.form-control.rounded-pill(type="text", name="phone", id="phone", placeholder="Nhập số điện thoại")

              .mb-3
                label.form-label(for="password") Mật khẩu
                input.form-control.rounded-pill(type="password", name="password", id="password", placeholder="Nhập mật khẩu", required)

              .mb-3
                label.form-label(for="confirmPassword") Nhập lại mật khẩu
                input.form-control.rounded-pill(type="password", name="confirmPassword", id="confirmPassword", placeholder="Nhập lại mật khẩu", required)

              button.btn.btn-primary.w-100.rounded-pill.mt-3(type="submit") Đăng ký

              .text-center.mt-3
                span.text-muted Đã có tài khoản? 
                a(href="/users/login").text-decoration-none.ms-1 Đăng nhập
