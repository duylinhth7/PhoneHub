extends ../../layouts/default.pug

block main
  .container.mt-5
    .row.justify-content-center
      .col-md-6
        .card.shadow-lg.rounded-4.border-0
          .card-body.p-4
            h2.text-center.mb-4.text-primary Đặt lại mật khẩu

            form(action="/users/password/reset" method="POST")

              .mb-3
                label.form-label(for="password") Mật khẩu mới
                input.form-control.rounded-pill(
                  type="password",
                  name="password",
                  id="password",
                  placeholder="Nhập mật khẩu mới",
                  required
                )

              .mb-3
                label.form-label(for="confirmPassword") Xác nhận mật khẩu
                input.form-control.rounded-pill(
                  type="password",
                  name="confirmPassword",
                  id="confirmPassword",
                  placeholder="Nhập lại mật khẩu",
                  required
                )

              button.btn.btn-primary.w-100.rounded-pill.mt-3(type="submit") Đặt lại mật khẩu

              .text-center.mt-3
                a(href="/users/login").text-decoration-none.text-muted Quay lại trang đăng nhập
