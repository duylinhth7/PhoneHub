extends ../../layouts/default.pug

block main
  .container.mt-5
    .row.justify-content-center
      .col-md-6.col-lg-5
        .card.shadow.rounded-4.border-0
          .card-body.p-4
            h4.text-center.mb-3.text-dark Đăng nhập tài khoản

            //- // Nút Google đăng nhập
            //- .text-center.mb-3
            //-   a.btn.btn-outline-secondary.w-100.rounded-pill.d-flex.align-items-center.justify-content-center(href="/auth/google")
            //-     img(src="https://www.gstatic.com/firebasejs/ui/2.0.0/images/auth/google.svg", alt="Google", width="20", class="me-2")
            //-     span Đăng nhập với tên Duy Linh
            //-   small.text-muted.mt-1 d-block.text-center hoanglinhdz2k4@gmail.com

            p.text-center.mt-3 Nhập thông tin đăng nhập của bạn để có quyền truy cập!

            form(action="/users/login", method="POST")
              // Email
              .mb-3
                label.form-label.text-danger(for="email") * Email của bạn
                .input-group
                  span.input-group-text.bg-white.rounded-start-pill
                    i.fas.fa-user
                  input.form-control.border-start-0.rounded-end-pill(type="text", id="email", name="email", placeholder="Nhập Email", required)

              // Mật khẩu
              .mb-3
                label.form-label.text-danger(for="password") * Mật khẩu
                .input-group
                  span.input-group-text.bg-white.rounded-start-pill
                    i.fas.fa-lock
                  input.form-control.border-start-0.rounded-end-pill(type="password", id="password", name="password", placeholder="Nhập mật khẩu", password required)
                  span.input-group-text.bg-white.rounded-end-pill(view-password)
                    i.fas.fa-eye-slash

              // Links phụ
              .d-flex.justify-content-between.mt-2.mb-3
                small
                  | Bạn chưa có tài khoản?
                  a.ms-1(href="/users/register") Đăng ký
                a(href="/users/password/forget") Quên mật khẩu?

              // Button
              button.btn.btn-dark.w-100.rounded-pill(type="submit") Đăng nhập
  block script 
  script(src="/js/user.js")
